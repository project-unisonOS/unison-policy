# Unison Policy Service Configuration

# Service Configuration
POLICY_PORT=8083
POLICY_HOST=0.0.0.0

# Policy Configuration
UNISON_POLICY_RULES=rules.yaml
UNISON_POLICY_BUNDLE=bundle.signed.json

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# P0-2: Consent Grant Configuration
UNISON_CONSENT_SECRET=consent-secret-key-change-in-production
UNISON_CONSENT_AUDIENCE=orchestrator
UNISON_CONSENT_DEFAULT_TTL_HOURS=24

# Security Features
POLICY_ENABLE_BUNDLE_SIGNING=true
POLICY_BUNDLE_SIGNER_KEY=/app/keys/bundle_signer.pem

# Feature flags
# Require consent grants for protected endpoints in services. Policy itself does not enforce
# consent at routing time but we document the flag for consistent configuration across services.
# Default: false (staged rollout)
UNISON_REQUIRE_CONSENT=false

# Logging
LOG_LEVEL=INFO
